/**index.wxss**/
page {
  background-color: #F3F4F4;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.item {
  font-size:0.8rem;
  font-weight:bold;
  float:left;
  padding:10px 10px 10px 10px;
  width:100%;
  border:0.1px solid #F3F4F4;
  margin:10px 0;
  background-color:#fff;
  box-sizing:border-box;
}

.item .right {
  float:right;
  font-weight: normal;
}

.item .right-img{
  float:right;
  width: 1rem;
  height:1rem;
}